<!-- Home page with the image and the welcome text -->
<div class="container">

    <!-- Content Wrapper. Contains page content -->
    <div id="Content Wrapper" class="content">

        <!-- Content Header (Page header) -->
        <section class="content-header">

        </section>

        <!-- Main content -->
        <section class="content">

            <!-- BOXES SECTION -->
            <section>

                <!-- ROW -->
                <div class="row">

                    <!-- FIRST BOX: EVENTS -->
                    <div class="col-lg-4 col-xs-6">
                        <div class="small-box bg-aqua">
                            <div class="inner">
                                <h3>Events</h3>
                                <p>{{events.length}}</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-calendar"></i>
                            </div>
                            <a href="/calendar" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <!-- END OF FIRST BOX ./col -->

                    <!-- SECOND BOX: TASKS STATISTICS -->
                    <div class="col-lg-4 col-xs-6">
                        <div class="small-box bg-green">
                            <div class="inner">
                                <h3>Tasks Statistics</h3>
                                <p>Tasks Completed: {{tasksStatistics()}}%</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-stats-bars"></i>
                            </div>
                            <a href="/todos" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <!-- END OF SECOND BOX ./col -->

                    <!-- THIRD BOX: VOLUNTEERS -->
                    <div class="col-lg-4 col-xs-6">
                        <div class="small-box bg-yellow">
                            <div class="inner">
                                <h3>Volunteers</h3>
                                <p>{{contacts.length}}</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-person-add"></i>
                            </div>
                            <a href="/contacts" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <!-- END OF THIRD BOX ./col -->

                </div>
                <!-- END OF BOXES ROW -->

            </section>
            <!-- END OF BOXES SECTION -->

            <!-- LISTS SECTION -->
            <section>

                <!-- LISTS ROW -->
                <div class="row">

                    <!-- LEFT COL -->
                    <div class="col-lg-8">
                        <div class="box box-primary">
                            <div class="box-header">
                                <i class="ion ion-clipboard"></i>
                                <h3 class="box-title">Upcoming Events:</h3>
                            </div>
                            <ul class="event-list" ng-repeat="event in getTopEvents()">
                                <li>
                                    <time datetime="2014-07-20 0000">
                                        <span class="day">{{getEventDay(event)}}</span>
                                        <span class="month">{{getEventMonth(event)}}</span>
                                    </time>
                                    <div class="info">
                                        <h2 class="title">{{event.name}}</h2>
                                        <p class="desc">{{event.description}}</p>
                                        <h3 style="margin: auto;">
                                            <span class="label label-default pull-right" style="width: 50%;">
                                                &nbsp;From:&nbsp;
                                                {{ event.fromDate | date:"dd/MM/yyyy"}}
                                                &nbsp;On:&nbsp;
                                                {{ event.fromDate | date:"hh:mm"}}
                                                <br>
                                                To:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                {{ event.toDate | date:"dd/MM/yyyy"}}
                                                &nbsp;On:&nbsp;
                                                {{ event.toDate | date:"hh:mm"}}
                                            </span>
                                        </h3>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- END OF LEFT COL -->

                    <!-- RIGHT COL: TOP TODO LISTS -->
                    <div class="col-lg-4">
                        <div class="box box-primary">
                            <div class="box-header">
                                <i class="ion ion-clipboard"></i>
                                <h3 class="box-title">Top ToDo Lists:</h3>
                            </div>

                            <div class="box-body">
                                <ul class="todo-list" ng-repeat="list in getTopLists()">
                                    <li>
                                        <!-- ToDo's Title -->
                                        <span class="text">{{list.name}}</span>

                                        <!-- ToDo's Remaining Tasks -->
                                        <!--Warning:-->
                                        <small class="label label-warning pull-right" ng-if="!isDanger(list)"><i class="fa fa-clock-o">Remaining: {{getRemainingTasksPercents(list)}}%</i></small>
                                        <!--Danger:-->
                                        <small class="label label-danger pull-right" ng-if="isDanger(list)"><i class="fa fa-clock-o">Remaining: {{getRemainingTasksPercents(list)}}%</i></small>

                                    </li>

                                    <div class="progress xs">
                                        <div class="progress-bar progress-bar-green"
                                             style="width: {{getCompletedTasksPercents(list)}}%;">
                                        </div>
                                    </div>
                                </ul>
                            </div>
                        </div>              


                    </div>
                    <!-- END OF RIGHT COL -->

                </div>
                <!-- END OF LISTS ROW -->

            </section>
            <!-- END OF LISTS SECTION -->

            <!-- GRAPH SECTION -->
            <section>

                <!-- CENTER COL -->
                <div class="col-lg-12">
                    <h3 class="box-title" style="margin: auto;">Tasks Progress:</h3><br>
                    <div id="graph"></div><br>
                </div>
                <!-- END OF CENTER COL -->

            </section>
            <!-- END OF GRAPH SECTION -->

        </section><!-- /.content -->

    </div><!-- / Content Wrapper -->

</div>
<!-- End Home page-->